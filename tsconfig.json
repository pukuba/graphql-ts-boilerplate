{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "paths":{
            "~/*":["./src/*"]
        }
    },
    "exclude":["node_modules", "dist", "tmp"],
    "include": ["src"]
}